{
  "name": "openclaw-client",
  "version": "1.0.0",
  "description": "TypeScript/JavaScript client for OpenClaw Gateway WebSocket protocol",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "src",
    "protocol.schema.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:esm && npm run build:cjs",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "build:esm": "tsc --module esnext --outDir dist --declaration false && node scripts/rename-mjs.js",
    "build:cjs": "tsc --module commonjs --moduleResolution node --outDir dist --declaration false",
    "generate:types": "tsx scripts/generate-types.ts",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "openclaw",
    "websocket",
    "client",
    "typescript",
    "gateway",
    "protocol",
    "rpc"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sbgreen/openclaw-client.git"
  },
  "bugs": {
    "url": "https://github.com/sbgreen/openclaw-client/issues"
  },
  "homepage": "https://github.com/sbgreen/openclaw-client#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "json-schema-to-typescript": "^15.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
